<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--分隔线-->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/normal_grey"
        android:layout_alignParentBottom="true"/>
    <!--底部列表按钮-->
    <RelativeLayout
        android:id="@+id/header_bottom_ctr_l"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/header_bottom_ctr_l_touch_bg"
        android:layout_above="@+id/divider">
        <TextView
            android:id="@+id/icon_play_all"
            android:textColor="#000000"
            android:textSize="17sp"
            android:text="6"
            android:gravity="center"
            android:layout_width="55dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:textColor="#000000"
            android:textSize="17sp"
            android:text="播放全部"
            android:gravity="left|center"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_toRightOf="@+id/icon_play_all"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/subscribedCount"
        android:textColor="#fff"
        android:textSize="17sp"
        android:text="+ 收藏 (1888)"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/header_bottom_btn_bg"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/divider"/>

    <!--底部控件-->
    <LinearLayout
        android:id="@+id/header_bottom_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_above="@+id/header_bottom_ctr_l">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:gravity="center"
            >
            <com.rnvc.rnmodule.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="&#xe600;"
                android:textColor="@drawable/text_touch_color"
                android:textSize="20sp"
                android:paddingBottom="2dp"/>
            <TextView
                android:id="@+id/commentCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="评论"
                android:textColor="@drawable/text_touch_color"
                android:textSize="12sp"
                android:paddingTop="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:gravity="center"
            >
            <com.rnvc.rnmodule.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="&#xe603;"
                android:textColor="@drawable/text_touch_color"
                android:textSize="20sp"
                android:paddingBottom="2dp"/>
            <TextView
                android:id="@+id/shareCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="分享"
                android:textColor="@drawable/text_touch_color"
                android:textSize="12sp"
                android:paddingTop="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:gravity="center"
            >
            <com.rnvc.rnmodule.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="&#xe601;"
                android:textColor="@drawable/text_touch_color"
                android:textSize="20sp"
                android:paddingBottom="2dp"/>
            <TextView
                android:id="@+id/download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="下载"
                android:textColor="@drawable/text_touch_color"
                android:textSize="12sp"
                android:paddingTop="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:gravity="center"
            >
            <com.rnvc.rnmodule.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="&#xe602;"
                android:textColor="@drawable/text_touch_color"
                android:textSize="20sp"
                android:paddingBottom="2dp"/>
            <TextView
                android:id="@+id/mutichoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="多选"
                android:textColor="@drawable/text_touch_color"
                android:textSize="12sp"
                android:paddingTop="1dp"/>
        </LinearLayout>
    </LinearLayout>

    <!--disc info-->
    <RelativeLayout
        android:id="@+id/header_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/header_bottom_btn_layout">
        <RelativeLayout
            android:id="@+id/header_center_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

        </RelativeLayout>
        <TextView
            android:id="@+id/header_center_l_title"
            android:layout_toRightOf="@+id/header_center_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="left"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/authorBtn"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/header_center_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="left|center"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/author_touch_bg">
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:contentDescription="avatar"/>
            <TextView
                android:id="@+id/header_center_l_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>