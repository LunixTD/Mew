{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@redux/*": ["src/redux/*"],
      "@container/*": ["src/container/*"],
      "@components/*": ["src/components/*"],
      "@config/*": ["src/config/*"],
      "@common/*": ["src/common/*"],
      "@navigator/*": ["src/navigator/*"],
      "@services/*": ["src/services/*"],
      "@assets/*": ["src/assets/*"],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}